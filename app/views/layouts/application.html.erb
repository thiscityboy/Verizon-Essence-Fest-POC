<!DOCTYPE html>
<html>
<head>
<meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1'>
<title>Verizon | Essence 2015</title>  
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

</head>
<body>
	<div class="tab">
		<img src="<%= asset_path 'vz_logotab-01.png' %>" width="90">
	</div>
	
	<div class="container">
    <%= yield %>
  </div>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>


<script>
  var instagramFeed = new OnScreen({
    campaignId: '<%= @osp_campaign_id %>',
    filter: 'instagram',
    show: function(data) {
      var newMessages = data.messages, element = null;
      for(var i = 0; i < newMessages.length; i++) {
        switch(newMessages[i].message_type){
          case "Messages::Media":
            element = $("<img />", { id: newMessages[i].external_id, class: 'instagram-image', src: newMessages[i].media, alt: newMessages[i].sender, data_date: newMessages[i].moderatedAt })
          break;
          default:
            console.error("Unknown message type: %s", newMessages[i].message_type);
          break;
        }
        $(element).hide().prependTo("#instagram").fadeIn();
      }
    }
  });
  instagramFeed.load();
</script>

</body>
</html>

